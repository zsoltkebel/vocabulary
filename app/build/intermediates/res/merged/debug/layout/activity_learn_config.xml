<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:orientation="horizontal"
        android:background="@color/purple"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_page_title"
            android:text="Learn"
            android:layout_gravity="center"
            android:textColor="@color/background"
            android:textStyle="bold"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/header2"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:orientation="vertical"
        android:layout_below="@id/header">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Choose learning method"
            android:textColor="@color/colorAccent"
            android:background="@color/light3"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:alpha="0.3"
            android:scaleType="fitXY"
            android:visibility="visible"
            app:srcCompat="@drawable/shadow2" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_below="@id/header"
        android:alpha="0.3"
        android:scaleType="fitXY"
        android:visibility="visible"
        app:srcCompat="@drawable/shadow2" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/header2"
        android:paddingTop="10dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:gravity="center">

            <RelativeLayout
                android:layout_width="@dimen/learn_btn_size"
                android:layout_height="@dimen/learn_btn_size"
                android:orientation="vertical"
                android:background="@drawable/btn_dark"
                android:onClick="startFlashCards"
                android:padding="7dp"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/settings_grey"
                    android:background="@drawable/btn_transplarent"
                    android:padding="5dp"
                    android:layout_alignParentEnd="true"
                    android:onClick="editFlashCards"/>
                <TextView
                    android:id="@+id/text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Flashcards"
                    android:layout_gravity="center"
                    android:textColor="@color/text_grey"
                    android:layout_alignParentBottom="true"
                    android:layout_centerInParent="true"
                    android:textStyle="bold"/>
                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@drawable/flashcards"
                    android:scaleType="centerInside"
                    android:layout_centerInParent="true"
                    android:layout_above="@id/text1"
                    android:layout_marginBottom="5dp"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="@dimen/learn_btn_size"
                android:layout_height="@dimen/learn_btn_size"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:background="@drawable/btn_dark"
                android:onClick="startFlashCards"
                android:orientation="vertical"
                android:padding="7dp"
                android:visibility="invisible">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/btn_transplarent"
                    android:onClick="editVocabularyTest"
                    android:padding="5dp"
                    android:src="@drawable/settings_grey" />

                <TextView
                    android:id="@+id/text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:text="Vocabulary Test"
                    android:textColor="@color/text_grey"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_above="@id/text2"
                    android:layout_centerInParent="true"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/vocabulary_test"
                    android:scaleType="centerInside" />
            </RelativeLayout>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingTop="10dp"
            android:gravity="center">

            <RelativeLayout
                android:layout_width="@dimen/learn_btn_size"
                android:layout_height="@dimen/learn_btn_size"
                android:layout_weight="1"
                android:background="@drawable/btn_dark"
                android:onClick="startFlashCards"
                android:orientation="vertical"
                android:padding="7dp"
                android:visibility="invisible">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/btn_transplarent"
                    android:onClick="editVocabularyTest"
                    android:padding="5dp"
                    android:src="@drawable/settings_grey" />

                <TextView
                    android:id="@+id/text3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:text="Vocabulary Test"
                    android:textColor="@color/text_grey"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_above="@id/text3"
                    android:layout_centerInParent="true"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/vocabulary_test"
                    android:scaleType="centerInside" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="@dimen/learn_btn_size"
                android:layout_height="@dimen/learn_btn_size"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:background="@drawable/btn_dark"
                android:onClick="startFlashCards"
                android:orientation="vertical"
                android:padding="7dp"
                android:visibility="invisible">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/btn_transplarent"
                    android:onClick="editVocabularyTest"
                    android:padding="5dp"
                    android:src="@drawable/settings_grey" />

                <TextView
                    android:id="@+id/text4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:text="Vocabulary Test"
                    android:textColor="@color/text_grey"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_above="@id/text4"
                    android:layout_centerInParent="true"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/vocabulary_test"
                    android:scaleType="centerInside" />
            </RelativeLayout>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </TableLayout>
</RelativeLayout>