<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dictionary20"
    android:versionCode="3"
    android:versionName="1.2" >

    <uses-sdk
        android:minSdkVersion="21"
        android:targetSdkVersion="25" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <meta-data
        android:name="android.support.VERSION"
        android:value="25.3.0" />

    <application
        android:name="droidninja.filepicker.FilePickerDelegate"
        android:allowBackup="true"
        android:debuggable="true"
        android:icon="@drawable/logo3"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:testOnly="true"
        android:theme="@style/AppTheme" >
        <activity android:name="com.vocabulary.MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.vocabulary.ActivityVocabularyList"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.vocabulary.screens.vocabulary.ActivityVocabulary"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.vocabulary.ActivityVocabularyContainer"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.vocabulary.ActivityWord"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.vocabulary.EditWord"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.vocabulary.learn.LearnActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.vocabulary.screens.main.ActivityTabLayout"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.vocabulary.user.ActivityUserMenu"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.vocabulary.learn.ActivityLearnConfiguration"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.vocabulary.learn.ActivityVocabularyTest"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.vocabulary.settings.ActivityAbout"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.vocabulary.screens.settings.ActivitySettings"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.vocabulary.screens.more.ActivityMore"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />

        <provider
            android:name="android.support.v4.content.FileProvider"
            android:authorities="com.example.myapp.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true" >
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/filepaths" />
        </provider>

        <activity
            android:name="droidninja.filepicker.FilePickerActivity"
            android:theme="@style/Theme.AppCompat.Light.DarkActionBar" >
        </activity>
    </application>

</manifest>