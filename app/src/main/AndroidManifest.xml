<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.vocabulary">

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo3"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ActivityVocabularyList"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity android:name=".screens.vocabulary.ActivityVocabulary"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity android:name=".ActivityVocabularyContainer"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity android:name=".ActivityWord"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity android:name=".EditWord"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity android:name=".learn.LearnActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity android:name=".screens.main.ActivityTabLayout"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity android:name=".user.ActivityUserMenu"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity android:name=".learn.ActivityLearnConfiguration"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity android:name=".learn.ActivityVocabularyTest"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity android:name=".settings.ActivityAbout"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity android:name=".screens.settings.ActivitySettings"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity android:name=".screens.more.ActivityMore"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>

        <provider
            android:name="android.support.v4.content.FileProvider"
            android:authorities="com.example.myapp.fileprovider"
            android:grantUriPermissions="true"
            android:exported="false">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/filepaths" />
        </provider>
    </application>

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

</manifest>