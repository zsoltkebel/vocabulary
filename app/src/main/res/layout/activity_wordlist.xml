<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">




        <RelativeLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="@dimen/header_height"
            android:background="@color/dark"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="horizontal"
            android:padding="10dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:onClick="backToDictionaries"
                android:padding="9dp"
                android:scaleType="centerCrop"
                android:src="@drawable/sel_back_arrow"
                android:layout_marginStart="5dp"
                android:background="@drawable/btn_transplarent"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"/>


            <Space
                android:layout_width="28dp"
                android:layout_height="30dp"
                android:layout_gravity="center" />

            <com.example.kebelzsolt.dictionary20.ExtendedEditText
                android:id="@+id/editText"
                style="@android:style/TextAppearance.Widget.EditText"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:maxWidth="200dp"
                android:minWidth="20dp"
                android:layout_gravity="center"
                android:background="@null"
                android:gravity="center"
                android:hint="@string/search"
                android:inputType="textPersonName"
                android:textColor="@android:color/white"
                android:textColorHint="@color/search"
                android:textSize="18dp" />

            <ImageView
                android:id="@+id/imgvClear"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:clickable="true"
                android:onClick="clearSearch"
                android:padding="5dp"
                android:scaleType="centerInside"
                android:src="@drawable/backspace_arrow"
                android:visibility="gone"
                android:layout_toEndOf="@id/editText" />


            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="5dp"
                android:background="@drawable/btn_transplarent"
                android:onClick="openMenu"
                android:padding="9dp"
                android:scaleType="fitCenter"
                android:src="@drawable/sel_menu"
                android:layout_centerVertical="true"/>

        </RelativeLayout>

        <android.support.design.widget.TabLayout
            android:id="@+id/tab_layout"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@id/header"
            style="@style/customTabLayout"
            app:tabTextAppearance="@style/customTabLayout"
            android:background="@color/light3"/>

        <android.support.v4.view.ViewPager
            android:id="@+id/view_pager"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_below="@id/tab_layout"
            android:layout_above="@id/layout_title"/>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/shadow2"
        android:layout_above="@id/layout_title"
        android:rotation="180"
        android:alpha="0.3"/>

    <LinearLayout
        android:id="@+id/layout_title"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:background="@color/light3"
        android:gravity="left|center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="4dp"
        android:paddingTop="4dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp">


        <ImageView
            android:id="@+id/imageView_wordList_flag"
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:layout_marginEnd="5dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/united_kingdom" />

        <TextView
            android:id="@+id/txt_language"
            android:layout_width="wrap_content"
            android:maxWidth="140dp"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:paddingBottom="2dp"
            android:text="English"
            android:textColor="@color/text_grey"
            android:textStyle="bold"

            android:singleLine="true"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"/>

        <ImageView
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="1dp"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/dot_grey" />
        <TextView
            android:id="@+id/txt_num_of_words"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingBottom="2dp"
            android:text="14"
            android:textColor="@color/text_grey" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="5dp"
            android:paddingBottom="2dp"
            android:text="@string/phrase"
            android:textColor="@color/text_grey"
            android:layout_weight="1"/>

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:background="@drawable/btn_transplarent"
            android:onClick="goToAdd"
            android:padding="9dp"
            android:src="@drawable/add_grey" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_options"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/light3"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="horizontal"
        android:visibility="gone"
        android:layout_above="@id/layout_title">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="15dp"
            android:paddingRight="30dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Selected:"
                android:textColor="@color/dark"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_numOfSelected"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/colorAccent" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/btn_edit"
            style="@android:style/Widget.Material.Button.Borderless"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:onClick="editWord"
            android:padding="10dp"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/ic_edit" />

        <ImageButton
            android:id="@+id/btn_delSelected"
            style="@android:style/Widget.Material.Button.Borderless"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:onClick="deleteSelected"
            android:padding="10dp"

            android:scaleType="centerInside"
            app:srcCompat="@drawable/del_2" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_alignParentBottom="true"
            android:alpha="0.3"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/shadow2" />
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:alpha="0.3"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/shadow2"
        android:layout_below="@id/tab_layout"/>

    <RelativeLayout
        android:id="@+id/touch"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/header"></RelativeLayout>

    <ProgressBar
        android:id="@+id/progressBar3"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="48dp"
        android:visibility="gone"/>

</RelativeLayout>
