<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:right="5dp"
        android:left="5dp"
        android:top="5dp"
        android:bottom="5dp">
        <selector xmlns:android="http://schemas.android.com/apk/res/android">
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/page2"/>
                    <corners android:radius="2dp"/>
                    <stroke
                        android:width="2dp"
                        android:color="@color/page2_light"/>
                </shape>
            </item>
            <item android:state_focused="true">
                <shape android:shape="rectangle">
                    <solid android:color="@color/page2_dark"/>
                    <corners android:radius="2dp"/>
                    <stroke
                        android:width="2dp"
                        android:color="@color/page2"/>
                </shape>
            </item>
        </selector>
    </item>
</layer-list>